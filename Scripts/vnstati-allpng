#!/bin/sh
# VERSION 2.0.3 - English / Responsive Grid Layout
# Generates: Summary, Hourly, Daily, Monthly, Yearly, Top10
# Layout: Dual column on Desktop, Single column on Mobile via CSS
# Dependencies: vnstat 2.x, ImageMagick (optional)

PATH=/opt/bin:/opt/sbin:/bin:/sbin:/usr/bin:/usr/sbin
VNSTATI="/opt/bin/vnstati"
OUTDIR="${2:-/opt/var/www}"
IFACE="${1:-}"

# 1. IMAGEMAGICK DETECTION
# Check for 'magick' (v7) or fallback to 'convert' (v6)
if command -v magick >/dev/null 2>&1; then
    IM_CMD="magick"
elif command -v convert >/dev/null 2>&1; then
    IM_CMD="convert"
else
    IM_CMD=""
fi

# 2. INTERFACE DETECTION
if [ -z "$IFACE" ]; then
  IFACE=$(vnstat --dblist 2>/dev/null | grep -v "Database" | grep -v "^$" | head -n 1 | awk '{print $1}')
fi

if [ -z "$IFACE" ]; then
  echo "ERROR: No interface specified and none found in DB." >&2
  echo "Usage: $0 <interface> [output_dir]" >&2
  exit 1
fi

if ! vnstat -i "$IFACE" --oneline >/dev/null 2>&1; then
    echo "ERROR: Interface '$IFACE' does not exist in vnStat database." >&2
    exit 1
fi

mkdir -p "$OUTDIR"

# 3. FILE DEFINITIONS
PREFIX="vnstat_${IFACE}"
S="${OUTDIR}/${PREFIX}_summary.png"
H="${OUTDIR}/${PREFIX}_hours.png"
D="${OUTDIR}/${PREFIX}_days.png"
M="${OUTDIR}/${PREFIX}_months.png"
Y="${OUTDIR}/${PREFIX}_years.png"
T="${OUTDIR}/${PREFIX}_top.png"
ALL="${OUTDIR}/${PREFIX}_all.png"

# 4. CHART GENERATION
echo "Generating charts for interface: ${IFACE}..."

$VNSTATI -i "$IFACE" -s -o "$S"
$VNSTATI -i "$IFACE" -h -o "$H"
$VNSTATI -i "$IFACE" -d -o "$D"
$VNSTATI -i "$IFACE" -m -o "$M"
$VNSTATI -i "$IFACE" -y -o "$Y"
$VNSTATI -i "$IFACE" -t -o "$T"

# 5. UNIFIED IMAGE CREATION (Vertical Strip Backup)
# We keep the single image vertical for compatibility, but HTML will handle the layout.
if [ -n "$IM_CMD" ]; then
    "$IM_CMD" "$S" "$H" "$D" "$M" "$Y" "$T" -append "$ALL"
    echo "Unified PNG created: $ALL"
else
    echo "WARNING: ImageMagick not found. Unified PNG skipped."
fi

# 6. HTML GENERATION (Responsive Dual Column)
HTMLFILE="${OUTDIR}/${IFACE}-vnstat.html"
DATE=$(date "+%d/%m/%Y %H:%M")

cat <<EOF > "$HTMLFILE"
<!doctype html>
<html lang="en">
<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <meta http-equiv='refresh' content='300'>
    <title>${IFACE} Traffic Stats</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>ðŸ“Š</text></svg>">
    <style>
        :root { --bg: #f0f2f5; --card: #fff; --text: #333; --shadow: 0 4px 6px rgba(0,0,0,0.1); }
        body { font-family: -apple-system, system-ui, sans-serif; background: var(--bg); color: var(--text); margin: 0; padding: 20px; }
        
        .container { max-width: 1100px; margin: 0 auto; }
        
        h1 { text-align: center; color: #1a1a1a; margin-bottom: 5px; }
        .date { text-align: center; color: #666; font-size: 0.9em; margin-bottom: 30px; }
        
        /* RESPONSIVE GRID LAYOUT */
        .grid { 
            display: grid; 
            grid-template-columns: 1fr; /* Default Mobile: 1 Column */
            gap: 20px; 
            align-items: start;
        }
        
        /* DESKTOP TWEAK: 2 Columns if screen is wide enough */
        @media (min-width: 768px) {
            .grid { grid-template-columns: 1fr 1fr; }
        }

        .card { background: var(--card); padding: 15px; border-radius: 12px; box-shadow: var(--shadow); text-align: center; }
        .card h2 { font-size: 14px; text-transform: uppercase; letter-spacing: 1px; color: #888; margin: 0 0 15px 0; border-bottom: 1px solid #eee; padding-bottom: 10px;}
        
        img { max-width: 100%; height: auto; border-radius: 4px; }
        
        .footer { text-align: center; font-size: 0.8em; color: #999; margin-top: 40px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>ðŸ“Š Traffic Statistics: ${IFACE}</h1>
        <div class="date">Last Update: ${DATE}</div>

        <div class="grid">
            <div class="column">
                <div class="card">
                    <h2>Summary</h2>
                    <img src='${S##*/}' alt='Summary'>
                </div>
                <div class="card" style="margin-top: 20px">
                    <h2>Last 24 Hours</h2>
                    <img src='${H##*/}' alt='Hourly'>
                </div>
                <div class="card" style="margin-top: 20px">
                    <h2>Daily History</h2>
                    <img src='${D##*/}' alt='Daily'>
                </div>
            </div>

            <div class="column">
                <div class="card">
                    <h2>Monthly History</h2>
                    <img src='${M##*/}' alt='Monthly'>
                </div>
                <div class="card" style="margin-top: 20px">
                    <h2>Yearly History</h2>
                    <img src='${Y##*/}' alt='Yearly'>
                </div>
                <div class="card" style="margin-top: 20px">
                    <h2>Top 10 Days</h2>
                    <img src='${T##*/}' alt='Top 10'>
                </div>
            </div>
        </div>

        <div class='footer'>Generated by vnStat 2 & ImageMagick</div>
    </div>
</body>
</html>
EOF

echo "HTML Page generated: $HTMLFILE"
